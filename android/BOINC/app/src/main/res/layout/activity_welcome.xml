<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ScrollView
                android:fillViewport="true"
                android:layout_above="@id/cancel_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                <ImageView
                        android:id="@+id/logo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="20dp"
                        android:maxWidth="400dp"
                        android:adjustViewBounds="true"
                        app:srcCompat="@drawable/ic_boinc_logo"
                        android:contentDescription="@string/app_name"
                        android:layout_centerHorizontal="true"/>

                <TextView
                        android:id="@+id/content_welcome_first"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="?android:attr/textColorPrimary"
                        android:layout_margin="5dp"
                        android:layout_below="@+id/logo"
                        android:text="@string/welcome_content_first" />

                <TextView
                        android:id="@+id/content_welcome_second"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="?android:attr/textColorPrimary"
                        android:layout_margin="5dp"
                        android:layout_below="@+id/content_welcome_first"
                        android:text="@string/welcome_content_second" />

                <TextView
                        android:id="@+id/content_welcome_third"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="?android:attr/textColorPrimary"
                        android:layout_margin="5dp"
                        android:layout_below="@+id/content_welcome_second"
                        android:text="@string/welcome_content_third" />

                <TextView
                        android:id="@+id/content_welcome_fourth"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="?android:attr/textColorPrimary"
                        android:layout_margin="5dp"
                        android:layout_below="@+id/content_welcome_third"
                        android:text="@string/welcome_content_fourth" />

                <TextView
                        android:id="@+id/content_welcome_fifth"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="?android:attr/textColorPrimary"
                        android:layout_margin="5dp"
                        android:layout_below="@+id/content_welcome_fourth"
                        android:text="@string/welcome_content_fifth" />

                <TextView
                        android:id="@+id/content_welcome_sixth"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="?android:attr/textColorPrimary"
                        android:layout_margin="5dp"
                        android:layout_below="@+id/content_welcome_fifth"
                        android:text="@string/welcome_content_sixth" />
            </RelativeLayout>
        </ScrollView>
        <Button
                android:id="@+id/continue_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="10dp"
                android:background="@drawable/shape_button_blue"
                android:minWidth="150dp"
                android:onClick="continueClicked"
                android:padding="5dp"
                android:text="@string/generic_button_continue"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/white" />

        <Button
                android:id="@+id/cancel_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="10dp"
                android:background="@drawable/shape_button_blue"
                android:minWidth="150dp"
                android:onClick="cancelClicked"
                android:padding="5dp"
                android:text="@string/confirm_cancel"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/white" />
</RelativeLayout>
